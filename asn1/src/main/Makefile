#used compiler
CPP          = g++

#delete file command
DEL_FILE     = rm -f

#link-command
LINK         = ar

#ld-config command
LDCONF       = /sbin/ldconfig -v

#defines the architecture for the build
ARCH         = -m64

#used compiler flags
SCFLAGS      = -fPIC -g3 -Wall -O0 -funsigned-char -std=c++11 $(ARCH)

#some custom defines  
DEFINES      = -DLINUX -DUNIX -D__GXX_EXPERIMENTAL_CXX0X__=1  -D_GLIBCXX_USE_NANOSLEEP -D_GLIBCXX_USE_C99_STDINT_TR1 -D_GLIBCXX_USE_GETTIMEOFDAY -fmessage-length=0

#runtime-lib  
LIBS         = -lc

#artifact to build
ARTIFACT     = libasn1.a

SYSTEM_LIB_PATH = -L/usr/local/lib/

LIB_PATH     = -L../target/dev/dep-bin/dynamic/

INCPATH      = -I./include/ -I../../target/dev/dep-include

SRCDIR       = ./c++/

OBJDIR       = ../../target/dev/objects/

OPATH        = ../../target/dev/bin/


SOURCES := $(wildcard $(SRCDIR)*.cpp)

OBJECTS := $(patsubst $(SRCDIR)%, $(OBJDIR)%, $(SOURCES:.cpp=.o))

SHARED_OBJECTS := $(wildcard $(LIB_PATH)*.so)

DYNAMIC_LIBS := $(SHARED_OBJECTS: lib/%/.so=%)

all: $(ARTIFACT)
$(ARTIFACT): $(OBJECTS)
		-@test -d $(OPATH) || mkdir $(OPATH)
	
		$(LINK) rvs $(OPATH)$(ARTIFACT) $(OBJECTS)
	
clean:
	-$(DEL_FILE) $(OBJECTS)
	-$(DEL_FILE) $(OPATH)$(ARTIFACT)
	
$(OBJDIR)%.o: $(SRCDIR)%.cpp
	-@test -d $(OBJDIR) || mkdir $(OBJDIR)
	$(CPP) -c $(SCFLAGS) $(INCPATH) $(DEFINES) $< -o $@
